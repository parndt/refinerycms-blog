<% unless @blog.comments.empty? %>
	<h2>Comments</h2>
	<div id="comments">
	  <% @blog.comments.approved.each do |comment| %>
			<% div_for comment, :class => cycle('odd','even') do -%>
			  <p><%=h comment.body %></p>
			  <p class="commented_by">Comment from <%=h comment.name %>, <%= time_ago_in_words comment.created_at %> ago</p>
			<% end -%>
	  <% end %>
	</div>
<% end %>